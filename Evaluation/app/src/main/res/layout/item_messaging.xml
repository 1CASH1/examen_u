<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivImagenMessaging"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleMessaging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_space"
        android:text="TextView"
        android:textSize="@dimen/title_msg"
        app:layout_constraintStart_toEndOf="@+id/ivImagenMessaging"
        android:layout_toRightOf="@id/ivImagenMessaging"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMessaging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_space"
        android:text="TextView"
        android:layout_toRightOf="@id/ivImagenMessaging"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_below="@id/tvTitleMessaging"
        app:layout_constraintStart_toEndOf="@+id/ivImagenMessaging"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleMessaging" />
    </RelativeLayout>
</RelativeLayout>